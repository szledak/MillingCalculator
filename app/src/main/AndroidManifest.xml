<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sonia.millingcalculator" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CuttingSpeedActivity"
            android:label="@string/title_activity_cutting_speed_vc"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
        <activity
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:name=".FeedPerToothActivity"
            android:label="@string/title_activity_feed_per_tooth"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:name=".TableFeedActivity"
            android:label="@string/title_activity_table_feed"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
